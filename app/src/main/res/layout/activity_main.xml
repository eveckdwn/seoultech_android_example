<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button 1호"/>


    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button 2호 : 코드로 뷰만들기 (개고생)"/>

    <Button
        android:id="@+id/btn_startLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인 : SharedPreferences"/>

    <Button
        android:id="@+id/btn_simpleListArray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple List Array"/>

    <Button
        android:id="@+id/btn_todo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Todo List Array"/>

</LinearLayout>
